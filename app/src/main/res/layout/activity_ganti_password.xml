<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".Activity.GantiPasswordActivity">

    <ProgressBar
        android:id="@+id/pb_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_ganti_password_judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/gotham_bold"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textAlignment="center"
        android:text="Ganti Password"
        android:textColor="#000000"
        android:textSize="25dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/password"
        android:layout_marginTop="30dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_ganti_password_subjudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:fontFamily="@font/gotham_black"
        android:text="Enter your password below to receive your \n password reset"
        app:layout_constraintTop_toBottomOf="@+id/tv_ganti_password_judul" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/ti_ganti_password_passlama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_item_profile"
        android:hint="Password Lama"
        android:inputType="textPassword"
        android:layout_marginBottom="10dp"
        android:padding="10dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/ti_ganti_password_passbaru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_item_profile"
        android:hint="Password Baru"
        android:inputType="textPassword"
        android:layout_marginBottom="10dp"
        android:padding="10dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/ti_ganti_password_konfirmpassbaru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_item_profile"
        android:hint="Konfirmasi Password Baru"
        android:inputType="textPassword"
        android:layout_marginBottom="10dp"
        android:padding="10dp"/>

    <Button
        android:id="@+id/btn_ganti_password_simpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/background_button"
        android:text="Change"
        android:enabled="false"
        android:textColor="#FFFFFF"/>

</LinearLayout>