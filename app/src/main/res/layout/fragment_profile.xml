<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ProfileFragment"
    android:background="@drawable/background_item_profile">

    <LinearLayout
        android:id="@+id/main_view_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp"
            android:background="@drawable/background_item_profile">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile_foto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/tv_profile_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="Nama Pengguna"
                android:textSize="18sp"
                android:layout_margin="8dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_profile_daftarpengepul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daftar sebagai Pengepul"
            android:background="@drawable/background_item_profile"
            android:textColor="@android:color/black"
            android:padding="20dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_profile_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:background="@drawable/background_item_profile"
            android:textColor="@android:color/black"
            android:padding="20dp"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tv_profile_ganti_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ganti Password"
            android:background="@drawable/background_item_profile"
            android:textColor="@android:color/black"
            android:padding="20dp"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tv_profile_syarat_dan_ketentuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Syarat dan Ketentuan"
            android:background="@drawable/background_item_profile"
            android:textColor="@android:color/black"
            android:padding="20dp"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/tv_profile_keluar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Keluar"
            android:background="@drawable/background_item_profile"
            android:textColor="@android:color/black"
            android:padding="20dp"
            android:textSize="16sp"/>

    </LinearLayout>
</RelativeLayout>