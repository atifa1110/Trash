<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Activity.EditProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_editprofile_foto"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        android:elevation="10dp" />

    <EditText
        android:padding="10dp"
        android:id="@+id/et_editprofile_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_edittext"
        android:hint="Nama"
        />
    <EditText
        android:padding="10dp"
        android:id="@+id/et_editprofile_alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_edittext"
        android:hint="Alamat Lengkap"
        />

    <EditText
        android:padding="10dp"
        android:id="@+id/et_editprofile_kodepos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_edittext"
        android:hint="Kode Pos"
        />
    <EditText
        android:padding="10dp"
        android:id="@+id/et_editprofile_no_telp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nomor Telepon"
        android:background="@drawable/background_edittext"
        android:inputType="number"
        />

    <Button
        android:id="@+id/btn_editprofile_simpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="40dp"
        android:background="@drawable/background_button"
        android:text="Simpan"
        android:textColor="#FFFFFF" />

</LinearLayout>